datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

model Car_Manufacturer {
  Name      String      @id @unique
  Car_Model Car_Model[]
}

model Car_Model {
  Model            String           @id @unique
  Car_Manufacturer Car_Manufacturer @relation(references: [Name], fields: [Manufacturer])
  Manufacturer     String
  Parked_Car       Parked_Car[]
}

model Color {
  Name       String       @id @unique
  Parked_Car Parked_Car[]
}

model Parked_Car {
  Number_Plate  String
  Control_Time  DateTime
  Car_Model     Car_Model @relation(references: [Model], fields: [Model])
  Model         String
  Car_Color     Color     @relation(references: [Name], fields: [Color])
  Color         String
  Latitude      Float
  Longitude     Float
  Car_Inspector String    @db.VarChar(256)
  Photo_Path    String

  @@id([Number_Plate, Control_Time], name: "Parked_Car_pkey")
}

model Parkzone_Type {
  Parkzone_Type String     @id @unique
  Description   String?
  Parkzone      Parkzone[]
}

model Parkzone {
  Name          String        @id @unique
  Parkzone_Type Parkzone_Type @relation(references: [Parkzone_Type], fields: [ParkzoneType])
  ParkzoneType  String
  Latitude      Float
  Longitude     Float
  Radius        Float
}
