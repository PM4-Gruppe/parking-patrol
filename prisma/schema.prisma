// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

model VehicleOwner {
  id           String         @id @unique @default(uuid())
  firstname    String
  lastname     String
  LicensePlate LicensePlate[]
}

model Vehicle {
  id               Int          @id @unique @default(autoincrement())
  licensePlate     LicensePlate @relation(references: [sign], fields: [licensePlateSign])
  licensePlateSign String
}

model LicensePlate {
  owner         VehicleOwner @relation(references: [id], fields: [ownerId])
  ownerId       String
  sign          String       @id @unique
  Vehicle       Vehicle[]
}
