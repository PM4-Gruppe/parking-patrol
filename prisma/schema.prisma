// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

model CarManufacturer {
  manufacturerName String     @id @unique
  carModel         CarModel[]
}

model CarModel {
  modelName       String          @id @unique
  carManufacturer CarManufacturer @relation(references: [manufacturerName], fields: [manufacturer])
  manufacturer    String
  parkedCar       ParkedCar[]
}

model Color {
  colorName String      @id @unique
  parkedCar ParkedCar[]
}

model ParkedCar {
  numberPlate  String
  controlTime  DateTime
  carModel     CarModel @relation(references: [modelName], fields: [model])
  model        String
  carColor     Color    @relation(references: [colorName], fields: [color])
  color        String
  latitude     Float
  longitude    Float
  carInspector String   @db.VarChar(256)
  photoPath    String

  @@id([numberPlate, controlTime], name: "Parked_Car_pkey")
}

model Parkzone {
  parkzoneName     String       @id @unique
  parkzoneType     ParkzoneType @relation(references: [typeName], fields: [parkzoneTypeName])
  parkzoneTypeName String
  latitude         Float
  longitude        Float
  radius           Float
}

model ParkzoneType {
  typeName    String     @id @unique
  description String?
  parkzone    Parkzone[]
}
